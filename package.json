{
  "name": "@iml/device-scanner",
  "description": "Builds an in-memory representation of devices. Uses udev rules to handle change events.",
  "author": "IML Team",
  "version": "1.1.1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "coverage": "jest --projects IML.DeviceScannerDaemon --projects IML.EventListener --coverage",
    "jest": "jest --projects IML.DeviceScannerDaemon --projects IML.EventListener",
    "test": "dotnet fable npm-jest",
    "test-watch": "jest --projects IML.DeviceScannerDaemon --projects IML.EventListener --watchAll",
    "restore": "dotnet restore device-scanner.sln && dotnet restore Root.fsproj",
    "build": "del-cli ./dist/**; rollup -c rollup-config.js",
    "postbuild": "cp-cli IML.EventListener/udev-rules dist/event-listener && cp-cli IML.DeviceScannerDaemon/systemd-units dist/device-scanner-daemon"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:intel-hpdd/device-scanner.git"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cp-cli": "1.0.2",
    "del-cli": "^1.1.0",
    "fable-utils": "^1.0.6",
    "jest": "^22.1.4",
    "jest-fable-preprocessor": "^1.4.0",
    "pre-commit": "1.2.2",
    "rollup": "^0.55.0",
    "rollup-plugin-cleanup": "^2.0.0",
    "rollup-plugin-fable": "^1.1.1",
    "rollup-plugin-filesize": "^1.5.0"
  }
}
