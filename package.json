{
  "name": "@iml/device-scanner",
  "description": "Builds an in-memory representation of devices. Uses udev rules to handle change events.",
  "author": "IML Team",
  "version": "1.0.1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "jest": "jest",
    "test": "dotnet fable npm-run jest",
    "restore": "dotnet restore",
    "cleanDist": "rm -rf /dist",
    "buildBlockDeviceListener": "rollup -c IML/BlockDeviceListener/rollup-config.js",
    "postbuildBlockDeviceListener": "cp -r IML/BlockDeviceListener/udev-rules dist/block-device-listener",
    "buildDeviceScannerDaemon": "rollup -c IML/DeviceScannerDaemon/rollup-config.js",
    "postbuildDeviceScannerDaemon": "cp -r IML/DeviceScannerDaemon/systemd-units dist/device-scanner-daemon",
    "build": "npm run cleanDist; sendProjFile; npm run buildBlockDeviceListener & npm run buildDeviceScannerDaemon"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:intel-hpdd/device-scanner.git"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "fable-jest": "2.4.1",
    "jest": "^20.0.4",
    "jest-fable-preprocessor": "^1.3.0",
    "pre-commit": "1.2.2",
    "prettier": "^1.6.1",
    "rollup": "^0.49.2",
    "rollup-plugin-cleanup": "^1.0.1",
    "rollup-plugin-fable": "^1.1.0",
    "rollup-plugin-filesize": "^1.4.2",
    "stream-to-promise": "2.2.0"
  }
}
