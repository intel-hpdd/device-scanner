[Unit]
Description=IML Mount Emitter

[Service]
Restart=always
Environment=NODE_ENV=production
ExecStartPre=stdbuf -o L findmnt -P | /usr/lib64/iml-mount-emitter/mount-emitter
ExecStart=stdbuf -o L findmnt --poll -P -o ACTION,TARGET,SOURCE,FSTYPE,OPTIONS,OLD-TARGET,OLD-OPTIONS | /usr/lib64/iml-mount-emitter/mount-emitter
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
