{
  "name": "device-scanner",
  "description": "Builds an in-memory representation of devices. Uses udev rules to handle change events.",
  "author": "MFL Team",
  "private": true,
  "scripts": {
    "prejest": "sendProjFile",
    "jest": "jest",
    "test": "dotnet fable npm-run jest",
    "eslint": "eslint ./",
    "prerollup": "sendProjFile",
    "rollup": "rollup -c rollup-config.js",
    "restore": "dotnet restore",
    "cleanDist": "rm -rf packages/*/dist"
  },
  "pre-commit": [
    "eslint",
    "test"
  ],
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "fs",
      "fsx"
    ],
    "transform": {
      "^.+\\.(fs|fsx)$": "jest-fable-preprocessor",
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/**/*.(test.fs|test.fsx)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!fable.+)/"
    ]
  },
  "fable": {
    "projLocation": "./device-scanner.fsproj"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:intel-hpdd/device-scanner.git"
  },
  "devDependencies": {
    "babel-core": "6.24.1",
    "babel-preset-env": "1.4.0",
    "eslint": "3.19.0",
    "eslint-config-prettier": "1.7.0",
    "eslint-plugin-prettier": "2.0.1",
    "fable-core": "1.0.0-narumi-914",
    "fable-jest": "2.4.1",
    "fable-node6": "2.1.3",
    "fable-powerpack": "next",
    "jest": "19.0.2",
    "jest-fable-preprocessor": "1.1.2",
    "lerna": "2.0.0-rc.4",
    "pre-commit": "1.2.2",
    "prettier": "1.3.1",
    "rollup": "0.41.6",
    "rollup-plugin-fable": "1.0.3",
    "stream-to-promise": "2.2.0"
  }
}
