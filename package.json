{
  "name": "@iml/device-scanner",
  "description": "Builds an in-memory representation of devices. Uses udev rules to handle change events.",
  "author": "IML Team",
  "version": "2.0.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "coverage": "jest --projects IML.DeviceScannerDaemon --coverage",
    "jest": "jest --projects IML.DeviceScannerDaemon",
    "test": "dotnet fable npm-jest",
    "test-watch": "jest --projects IML.DeviceScannerDaemon --watchAll",
    "restore": "dotnet restore device-scanner.sln && dotnet restore Root.fsproj",
    "build": "del-cli ./dist/**; rollup -c rollup-config.js",
    "postbuild": "cp-cli IML.Listeners/UdevListener/udev-rules/ dist/listeners && cp-cli IML.DeviceScannerDaemon/systemd-units dist/device-scanner-daemon",
    "premock": "docker run  -di --privileged --name mock intelhpdd/mock /usr/sbin/init",
    "mock": "docker cp -a ./ mock:/builddir",
    "postmock": "docker exec -i mock bash -xec 'bash -xe /builddir/mock-build.sh'"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:intel-hpdd/device-scanner.git"
  },
  "dependencies": {
    "@iml/node-libzfs": "0.1.10"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cp-cli": "1.0.2",
    "del-cli": "^1.1.0",
    "fable-utils": "^1.0.6",
    "jest": "^22.1.4",
    "jest-fable-preprocessor": "^1.4.0",
    "pre-commit": "1.2.2",
    "rollup": "^0.55.3",
    "rollup-plugin-cleanup": "^2.0.0",
    "rollup-plugin-fable": "^1.1.1",
    "rollup-plugin-filesize": "^1.5.0"
  }
}
